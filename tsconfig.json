{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "strict": true,
    "sourceMap": false,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": false,
    "lib": [
      "es2015"
    ]
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
